summary: Run unit tests

discover:
    how: fmf
    test: /test/tmt/localunit

execute:
    how: tmt

prepare:
    - name: build and test dependencies
      how: install
      package:
        - golang
        - gpgme-devel
        - libseccomp-devel
        - systemd-devel
      order: 5

provision:
    how: artemis
    hardware:
        memory: ">= 16 GB"
        cpu:
            cores: ">= 4"
            threads: ">=8"
        disk:
            - size: ">= 512 GB"
